{
  "name": "bucket",
  "version": "0.0.1",
  "description": "a bucket for your content",
  "main": "dist/app.js",
  "scripts": {
    "dev": "parallelshell 'npm run webpack:watch' 'npm run node:dev' 'npm run test:dev'",
    "docker:build": "docker-compose build",
    "docker:up": " docker-compose up --detach --remove-orphans",
    "docker:down": "docker-compose down --volumes --remove-orphans",
    "docker:start": "docker-compose start",
    "docker:stop": "docker-compose stop",
    "test": "jest --setupFiles dotenv/config --coverage",
    "test:dev": "jest --setupFiles dotenv/config --coverage --runInBand --watch",
    "node:dev": "nodemon --inspect dist/app.js",
    "webpack:watch": "webpack --mode=development --watch",
    "build": "webpack --mode=production",
    "start": "node dist/app.js"
  },
  "author": "Simon Breiter",
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
      "*.js": [
        "prettier-standard",
        "git add"
      ]
  },
  "dependencies": {
    "axios": "^0.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "express-jwt": "^5.3.1",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.5",
    "mongodb": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/config-angular": "^8.2.0",
    "babel-loader": "^8.0.6",
    "commitlint": "^8.2.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "parallelshell": "^3.0.2",
    "prettier-standard": "^15.0.1",
    "supertest": "^4.0.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  }
}
