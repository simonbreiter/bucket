{
  "name": "bucket",
  "version": "0.0.1",
  "description": "a bucket for your content",
  "main": "dist/main.js",
  "scripts": {
    "dev": "docker-compose build; docker-compose up -d",
    "test": "jest --setupFiles dotenv/config --coverage",
    "test:dev": "jest --setupFiles dotenv/config --coverage --watch",
    "node:dev": "nodemon --inspect dist/app.js",
    "webpack:watch": "webpack --mode=development --watch",
    "build": "webpack --mode=production",
    "start": "node dist/app.js"
  },
  "author": "Simon Breiter",
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "*.(js)": [
        "prettier-standard",
        "git add"
      ],
      "ignore": [
        "dist",
        "node_modules"
      ]
    }
  },
  "dependencies": {
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "express-graphql": "^0.8.0",
    "express-jwt": "^5.3.1",
    "graphql": "^14.2.1",
    "graphql-tools": "^4.0.4",
    "mongodb": "^3.2.3"
  },
  "devDependencies": {
    "@commitlint/config-angular": "^7.5.0",
    "babel-loader": "^8.0.5",
    "commitlint": "^7.5.2",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "nodemon": "^1.19.0",
    "prettier-standard": "^9.1.1",
    "supertest": "^4.0.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2"
  }
}
