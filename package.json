{
  "name": "bucket",
  "version": "0.0.1",
  "description": "a bucket for your content",
  "main": "dist/app.js",
  "scripts": {
    "dev": "npm-run-all --parallel webpack:dev node:dev test:dev",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up --detach --remove-orphans",
    "docker:down": "docker-compose down --volumes --remove-orphans",
    "docker:start": "docker-compose start",
    "docker:stop": "docker-compose stop",
    "test": "jest --coverage --detectOpenHandles",
    "test:dev": "jest --coverage --runInBand --watchAll",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "node:dev": "nodemon --inspect dist/app.js",
    "webpack:dev": "webpack --mode=development --watch",
    "prettier": "prettier-standard",
    "build": "webpack --mode=production",
    "start": "node dist/app.js"
  },
  "author": "Simon Breiter",
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-angular"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "git add"
    ]
  },
  "standard": {
    "ignore": [
      "*.test.js"
    ]
  },
  "dependencies": {
    "axios": "^0.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "express-jwt": "^5.3.1",
    "graphql": "^14.5.8",
    "graphql-tools": "^4.0.6",
    "mongodb": "^3.3.3"
  },
  "devDependencies": {
    "@commitlint/config-angular": "^8.2.0",
    "babel-loader": "^8.0.6",
    "body-parser": "^1.19.0",
    "commitlint": "^8.2.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "prettier-standard": "^15.0.1",
    "standard": "^14.3.1",
    "supertest": "^4.0.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  }
}
